{% comment %} ZWEITLIEBE MODERN HEADER - Based on HTML Designs {% endcomment %}

<style>
/* === ZWEITLIEBE MODERN HEADER === */
.zweitliebe-modern-header {
  background: var(--zweitliebe-white);
  border-bottom: 1px solid var(--zweitliebe-light);
  position: sticky;
  top: 0;
  z-index: 100;
  font-family: var(--zweitliebe-font-family);
}

.zweitliebe-header-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--zweitliebe-space-10);
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 70px;
  gap: var(--zweitliebe-space-8);
}

/* Logo Section */
.zweitliebe-logo-section {
  display: flex;
  align-items: center;
  gap: var(--zweitliebe-space-8);
}

.zweitliebe-logo {
  display: flex;
  align-items: center;
  gap: var(--zweitliebe-space-4);
  text-decoration: none;
  color: var(--zweitliebe-dark);
}

.zweitliebe-logo-icon {
  width: 16px;
  height: 16px;
}

.zweitliebe-logo-text {
  font-size: var(--zweitliebe-text-lg);
  font-weight: 700;
  line-height: 1.2;
  letter-spacing: -0.015em;
}

/* Navigation */
.zweitliebe-nav {
  display: flex;
  align-items: center;
  gap: var(--zweitliebe-space-8);
  list-style: none;
  margin: 0;
  padding: 0;
}

.zweitliebe-nav-link {
  color: var(--zweitliebe-dark);
  text-decoration: none;
  font-size: var(--zweitliebe-text-sm);
  font-weight: 500;
  line-height: 1.4;
  transition: color 0.2s ease;
}

.zweitliebe-nav-link:hover {
  color: var(--zweitliebe-green);
}

/* Search Section */
.zweitliebe-search-section {
  flex: 1;
  display: flex;
  justify-content: end;
  gap: var(--zweitliebe-space-8);
  max-width: 600px;
}

.zweitliebe-search-container {
  flex: 1;
  max-width: 256px;
  min-width: 160px;
}

.zweitliebe-search-form {
  display: flex;
  width: 100%;
  height: 40px;
  border-radius: var(--zweitliebe-radius-lg);
  overflow: hidden;
}

.zweitliebe-search-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--zweitliebe-light);
  border: none;
  padding-left: var(--zweitliebe-space-4);
  border-radius: var(--zweitliebe-radius-lg) 0 0 var(--zweitliebe-radius-lg);
  border-right: 0;
  color: var(--zweitliebe-green);
}

.zweitliebe-search-input {
  flex: 1;
  min-width: 0;
  border: none;
  background: var(--zweitliebe-light);
  color: var(--zweitliebe-dark);
  padding: 0 var(--zweitliebe-space-4) 0 var(--zweitliebe-space-2);
  border-radius: 0 var(--zweitliebe-radius-lg) var(--zweitliebe-radius-lg) 0;
  font-size: var(--zweitliebe-text-base);
  font-weight: 400;
  line-height: 1.4;
  border-left: 0;
}

.zweitliebe-search-input:focus {
  outline: 0;
  ring: 0;
}

.zweitliebe-search-input::placeholder {
  color: var(--zweitliebe-green);
}

/* Actions Section */
.zweitliebe-actions {
  display: flex;
  gap: var(--zweitliebe-space-2);
}

.zweitliebe-action-btn {
  display: flex;
  min-width: 84px;
  max-width: 480px;
  cursor: pointer;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: var(--zweitliebe-radius-full);
  height: 40px;
  padding: 0 var(--zweitliebe-space-4);
  background: var(--zweitliebe-light);
  color: var(--zweitliebe-dark);
  text-decoration: none;
  font-size: var(--zweitliebe-text-sm);
  font-weight: 700;
  line-height: 1.4;
  letter-spacing: 0.015em;
  border: none;
  transition: all 0.2s ease;
}

.zweitliebe-action-btn:hover {
  background: var(--zweitliebe-green);
  color: var(--zweitliebe-white);
}

.zweitliebe-action-btn--icon {
  min-width: 0;
  padding: 0 var(--zweitliebe-space-3);
  gap: var(--zweitliebe-space-2);
}

.zweitliebe-action-btn--icon svg {
  width: 20px;
  height: 20px;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .zweitliebe-header-container {
    padding: 0 var(--zweitliebe-space-4);
    gap: var(--zweitliebe-space-4);
  }
  
  .zweitliebe-nav {
    display: none;
  }
  
  .zweitliebe-search-section {
    max-width: 200px;
  }
  
  .zweitliebe-action-btn {
    min-width: 60px;
    padding: 0 var(--zweitliebe-space-3);
    font-size: var(--zweitliebe-text-xs);
  }
}

@media (max-width: 480px) {
  .zweitliebe-action-btn span {
    display: none;
  }
  
  .zweitliebe-action-btn {
    min-width: 40px;
    padding: 0 var(--zweitliebe-space-2);
  }
}
</style>

<header class="zweitliebe-modern-header" role="banner">
  <div class="zweitliebe-header-container">
    <!-- Logo Section -->
    <div class="zweitliebe-logo-section">
      <a href="{{ routes.root_url }}" class="zweitliebe-logo">
        <div class="zweitliebe-logo-icon">
          <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M36.7273 44C33.9891 44 31.6043 39.8386 30.3636 33.69C29.123 39.8386 26.7382 44 24 44C21.2618 44 18.877 39.8386 17.6364 33.69C16.3957 39.8386 14.0109 44 11.2727 44C7.25611 44 4 35.0457 4 24C4 12.9543 7.25611 4 11.2727 4C14.0109 4 16.3957 8.16144 17.6364 14.31C18.877 8.16144 21.2618 4 24 4C26.7382 4 29.123 8.16144 30.3636 14.31C31.6043 8.16144 33.9891 4 36.7273 4C40.7439 4 44 12.9543 44 24C44 35.0457 40.7439 44 36.7273 44Z" fill="currentColor"/>
