{% comment %}
  REBUY-STYLE PRODUCT CARD - ZWEITLIEBE
  Mit Trust-Indicators, Zustandsanzeige und Conversion-Optimierung
{% endcomment %}

{% assign product_form_id = 'product-form-' | append: section.id | append: product.id %}

<div class="rebuy-card" style="position: relative; overflow: hidden; margin-bottom: var(--space-lg);" data-product-id="{{ product.id }}">

  <!-- Image Container -->
  <div style="position: relative; margin-bottom: var(--space-md);">
    <a href="{{ product.url }}" style="text-decoration: none; display: block;">
      {% if product.featured_media %}
        <img src="{{ product.featured_media | img_url: '400x400' }}" 
             alt="{{ product.featured_media.alt | escape }}"
             style="width: 100%; aspect-ratio: 1; object-fit: cover; border-radius: var(--radius-md); transition: transform 0.3s ease;"
             onmouseover="this.style.transform='scale(1.05)'"
             onmouseout="this.style.transform='scale(1)'">
      {% else %}
        <div style="width: 100%; aspect-ratio: 1; background: var(--gray-200); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center;">
          <svg width="64" height="64" fill="var(--gray-400)" viewBox="0 0 24 24">
            <path d="M4 2h16a2 2 0 0 1 2 2v16a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2zm0 2v16h16V4H4zm2 2h12v2H6V6zm0 4h12v2H6v-2zm0 4h8v2H6v-2z"/>
          </svg>
        </div>
      {% endif %}
    </a>

    <!-- Zustand Badge -->
    {% assign condition = product.metafields.zweitliebe.condition.value | default: 'gut' %}
    <div style="position: absolute; top: var(--space-sm); left: var(--space-sm);">
      {% case condition %}
        {% when 'neuwertig' %}
          <span class="condition-indicator condition-new">
            <svg width="12" height="12" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Neuwertig
          </span>
        {% when 'sehr_gut' %}
          <span class="condition-indicator condition-excellent">Sehr gut</span>
        {% when 'gut' %}
          <span class="condition-indicator condition-good">Gut</span>
        {% else %}
          <span class="condition-indicator condition-fair">Akzeptabel</span>
      {% endcase %}
    </div>

    <!-- Nachhaltigkeits-Badge -->
    <div style="position: absolute; top: var(--space-sm); right: var(--space-sm);">
      <div class="trust-badge" style="background: var(--success-green); font-size: var(--text-xs);">
        <svg width="12" height="12" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
        -{{ product.metafields.zweitliebe.co2_saved.value | default: '2.5' }}kg CO₂
      </div>
    </div>

    <!-- Verfügbarkeit Indicator -->
    {% if product.available %}
      <div style="position: absolute; bottom: var(--space-sm); right: var(--space-sm);">
        <div class="trust-badge" style="background: var(--success-green); font-size: var(--text-xs);">
          ✓ Verfügbar
        </div>
      </div>
    {% else %}
      <div style="position: absolute; bottom: var(--space-sm); right: var(--space-sm);">
        <div class="trust-badge" style="background: var(--error-red); font-size: var(--text-xs);">
          Ausverkauft
        </div>
      </div>
    {% endif %}
  </div>

  <!-- Content -->
  <div>
    <!-- Author -->
    {% if product.metafields.zweitliebe.author.value %}
      <div style="margin-bottom: var(--space-xs); font-size: var(--text-sm); color: var(--gray-600);">
        {{ product.metafields.zweitliebe.author.value }}
      </div>
    {% endif %}

    <!-- Title -->
    <h3 style="margin-bottom: var(--space-sm); line-height: 1.4; font-size: var(--text-lg); font-weight: var(--font-semibold); color: var(--gray-900);">
      <a href="{{ product.url }}" style="color: inherit; text-decoration: none; transition: color 0.2s ease;">
        {{ product.title | truncate: 60 }}
      </a>
    </h3>

    <!-- Rating & Reviews -->
    {% assign rating = product.metafields.zweitliebe.rating.value | default: 4.5 %}
    {% assign review_count = product.metafields.zweitliebe.review_count.value | default: 23 %}
    
    <div style="display: flex; align-items: center; gap: var(--space-sm); margin-bottom: var(--space-md);">
      <div class="rating-stars">
        {% assign full_stars = rating | floor %}
        {% assign half_star = rating | modulo: 1 | round %}
        
        {% for i in (1..5) %}
          {% if i <= full_stars %}
            <svg width="14" height="14" fill="#FCD34D" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          {% elsif i == full_stars | plus: 1 and half_star > 0 %}
            <svg width="14" height="14" fill="#FCD34D" viewBox="0 0 20 20">
              <defs>
                <linearGradient id="half-fill-{{ product.id }}">
                  <stop offset="50%" stop-color="#FCD34D"/>
                  <stop offset="50%" stop-color="#E5E7EB"/>
                </linearGradient>
              </defs>
              <path fill="url(#half-fill-{{ product.id }})" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          {% else %}
            <svg width="14" height="14" fill="#E5E7EB" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          {% endif %}
        {% endfor %}
      </div>
      
      <span style="font-size: var(--text-sm); color: var(--gray-500);">
        ({{ review_count }})
      </span>
    </div>

    <!-- Genre/Category -->
    {% assign genre = product.metafields.zweitliebe.genre.value %}
    {% if genre %}
      <div style="margin-bottom: var(--space-md);">
        <span style="font-size: var(--text-xs); background: var(--accent-green); color: white; border: none; padding: var(--space-xs) var(--space-sm); border-radius: var(--radius-sm); font-weight: var(--font-medium);">
          {{ genre }}
        </span>
      </div>
    {% endif %}

    <!-- Price -->
    <div style="margin-bottom: var(--space-lg);">
      {% if product.compare_at_price > product.price %}
        <div style="display: flex; align-items: center; gap: var(--space-sm); flex-wrap: wrap;">
          <span style="font-size: var(--text-lg); font-weight: var(--font-bold); color: var(--primary-green);">
            {{ product.price | money }}
          </span>
          <span style="font-size: var(--text-base); color: var(--gray-500); text-decoration: line-through;">
            {{ product.compare_at_price | money }}
          </span>
          {% assign savings_percent = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
          <span class="trust-badge sale-badge" style="font-size: var(--text-xs);">
            -{{ savings_percent }}%
          </span>
        </div>
        <div style="font-size: var(--text-sm); margin-top: var(--space-xs); color: var(--gray-600);">
          Du sparst {{ product.compare_at_price | minus: product.price | money }}
        </div>
      {% else %}
        <span style="font-size: var(--text-lg); font-weight: var(--font-bold); color: var(--primary-green);">
          {{ product.price | money }}
        </span>
      {% endif %}
    </div>

    <!-- Quick Details -->
    <div style="margin-bottom: var(--space-lg); display: none;" class="desktop-only">
      {% if product.metafields.zweitliebe.isbn.value %}
        <div style="font-size: var(--text-sm); margin-bottom: var(--space-xs); color: var(--gray-600);">
          <strong>ISBN:</strong> {{ product.metafields.zweitliebe.isbn.value }}
        </div>
      {% endif %}
      
      {% if product.metafields.zweitliebe.publisher.value %}
        <div style="font-size: var(--text-sm); margin-bottom: var(--space-xs); color: var(--gray-600);">
          <strong>Verlag:</strong> {{ product.metafields.zweitliebe.publisher.value }}
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Card Footer -->
  <div style="display: flex; gap: var(--space-sm); margin-top: auto;">
    {% if product.available %}
      <!-- Add to Cart Button -->
      <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" style="flex: 1;">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <button type="submit" class="btn-primary" style="width: 100%; padding: var(--space-sm) var(--space-md); font-size: var(--text-sm);">
          <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20" style="margin-right: var(--space-xs);">
            <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" />
          </svg>
          In den Warenkorb
        </button>
      </form>

      <!-- Quick View Button -->
      <button type="button" style="background: none; border: 1px solid var(--gray-300); padding: var(--space-sm); border-radius: var(--radius-md); cursor: pointer; transition: all 0.2s ease;">
        <svg width="16" height="16" fill="var(--gray-600)" viewBox="0 0 20 20">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
        </svg>
      </button>
    {% else %}
      <button type="button" style="width: 100%; padding: var(--space-sm) var(--space-md); font-size: var(--text-sm); opacity: 0.6; background: var(--gray-200); color: var(--gray-600); border: none; border-radius: var(--radius-md);" disabled>
        Ausverkauft
      </button>
    {% endif %}
  </div>

  <!-- Garantie Badge (fixiert unten) -->
  <div style="position: absolute; bottom: 0; left: 0; right: 0; background: var(--trust-blue); color: white; padding: var(--space-xs); text-align: center; font-size: var(--text-xs); font-weight: var(--font-medium); border-radius: 0 0 var(--radius-lg) var(--radius-lg); transform: translateY(100%); transition: transform 0.3s ease;">
    🛡️ 36 Monate Garantie • Kostenloser Versand ab 10€
  </div>
</div>

<!-- Hover Effects CSS -->
<style>
.rebuy-card:hover .desktop-only {
  display: block !important;
}

.rebuy-card:hover h3 a {
  color: var(--primary-green);
}

.rebuy-card:hover div[style*="position: absolute; bottom: 0"] {
  transform: translateY(0);
  background: var(--primary-green) !important;
}

.rebuy-card button[style*="background: none"]:hover {
  background: var(--gray-100) !important;
  border-color: var(--gray-400) !important;
}

@media (max-width: 768px) {
  .rebuy-card div[style*="display: flex; gap"] {
    flex-direction: column;
  }
  
  .rebuy-card div[style*="display: flex; gap"] form {
    width: 100%;
  }
  
  .rebuy-card .desktop-only {
    display: none !important;
  }
  
  .rebuy-card div[style*="display: flex; align-items: center; gap"][style*="flex-wrap: wrap"] {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-xs);
  }
}
</style> 