<section class="hero-slideshow" style="position: relative; overflow: hidden;">
  
  <!-- Slideshow Container -->
  <div class="slideshow-container" style="position: relative; height: 80vh; min-height: 600px;">
    
    {% for block in section.blocks %}
      {% if block.type == 'slide' %}
        {% assign slide_index = forloop.index %}
        <div class="slide" 
             style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; 
                    background: {% case slide_index %}
                                  {% when 1 %}
                                    linear-gradient(135deg, rgba(45, 90, 39, 0.8) 0%, rgba(74, 124, 89, 0.6) 100%),
                                    linear-gradient(45deg, #2D5A27 0%, #4A7C59 50%, #6B9B6A 100%),
                                    url('data:image/svg+xml;base64,') repeat !important;
                                  {% when 2 %}
                                    linear-gradient(135deg, rgba(30, 64, 175, 0.8) 0%, rgba(45, 90, 39, 0.6) 100%),
                                    linear-gradient(45deg, #1E40AF 0%, #2D5A27 50%, #4A7C59 100%),
                                    url('data:image/svg+xml;base64,') repeat !important;
                                  {% when 3 %}
                                    linear-gradient(135deg, rgba(34, 197, 94, 0.8) 0%, rgba(45, 90, 39, 0.6) 100%),
                                    linear-gradient(45deg, #22C55E 0%, #2D5A27 50%, #16A34A 100%),
                                    url('data:image/svg+xml;base64,') repeat !important;
                                  {% else %}
                                    linear-gradient(135deg, rgba(45, 90, 39, 0.8) 0%, rgba(107, 155, 106, 0.6) 100%) !important;
                                {% endcase %}
                    display: {{ forloop.first | default: false | ternary: 'flex', 'none' }}; 
                    align-items: center; justify-content: center;
                    animation: slideIn 0.8s ease-in-out;"
             data-slide="{{ forloop.index }}">
          
          <!-- Buchspezifische Overlay-Elemente -->
          <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.3);"></div>
          
          <!-- Schwebende Buchseiten (nur auf Slide 1) -->
          {% if forloop.index == 1 %}
            <div class="floating-books" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; overflow: hidden; opacity: 0.1;">
              {% for i in (1..8) %}
                <div class="book-page" 
                     style="position: absolute; 
                            width: 80px; height: 100px; 
                            background: white; 
                            border-radius: 4px; 
                            top: {{ i | times: 12 | plus: 10 }}%; 
                            left: {{ i | times: 11 | plus: 5 }}%;
                            animation: float {{ i | plus: 3 }}s infinite ease-in-out;
                            transform: rotate({{ i | times: 15 | minus: 30 }}deg);">
                </div>
              {% endfor %}
            </div>
          {% endif %}
          
          <!-- Bestseller-Sterne (nur auf Slide 2) -->
          {% if forloop.index == 2 %}
            <div class="floating-stars" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; overflow: hidden; opacity: 0.2;">
              {% for i in (1..6) %}
                <div class="star" 
                     style="position: absolute; 
                            color: #FCD34D; 
                            font-size: {{ i | times: 8 | plus: 20 }}px;
                            top: {{ i | times: 15 | plus: 5 }}%; 
                            left: {{ i | times: 12 | plus: 10 }}%;
                            animation: sparkle {{ i | plus: 2 }}s infinite ease-in-out;">
                  ‚≠ê
                </div>
              {% endfor %}
            </div>
          {% endif %}
          
          <!-- Garantie-Schilde (nur auf Slide 3) -->
          {% if forloop.index == 3 %}
            <div class="floating-shields" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; overflow: hidden; opacity: 0.15;">
              {% for i in (1..5) %}
                <div class="shield" 
                     style="position: absolute; 
                            color: white; 
                            font-size: {{ i | times: 6 | plus: 24 }}px;
                            top: {{ i | times: 18 | plus: 10 }}%; 
                            left: {{ i | times: 15 | plus: 5 }}%;
                            animation: glow {{ i | plus: 4 }}s infinite ease-in-out;">
                  üõ°Ô∏è
                </div>
              {% endfor %}
            </div>
          {% endif %}
          
          <!-- Content Container -->
          <div class="zweitliebe-container" style="position: relative; z-index: 2;">
            <div class="slide-content" style="text-align: {{ block.settings.text_alignment | default: 'center' }}; color: white; max-width: 800px; margin: 0 auto;">
              
              <!-- Trust Badges oben -->
              {% if block.settings.show_trust_badges %}
                <div style="margin-bottom: var(--space-lg); display: flex; justify-content: {{ block.settings.text_alignment | default: 'center' }}; gap: var(--space-sm); flex-wrap: wrap;">
                  <div class="trust-badge guarantee-badge">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    36 Monate Garantie
                  </div>
                  
                  <div class="trust-badge" style="background: var(--success-green);">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    4.8/5 Bewertung
                  </div>
                </div>
              {% endif %}

              <!-- Hauptheadline -->
              <h1 style="font-size: 56px; line-height: 1.1; margin-bottom: var(--space-lg); font-weight: var(--font-bold); text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">
                {% if block.settings.headline_highlight %}
                  <span style="color: #86EFAC;">{{ block.settings.headline_highlight }}</span><br>
                {% endif %}
                {{ block.settings.headline }}
              </h1>

              <!-- Subheadline/Text -->
              {% if block.settings.text %}
                <div style="font-size: var(--text-xl); line-height: 1.6; margin-bottom: var(--space-2xl); opacity: 0.95; text-shadow: 1px 1px 2px rgba(0,0,0,0.3);">
                  {{ block.settings.text }}
                </div>
              {% endif %}

              <!-- CTAs -->
              <div style="display: flex; gap: var(--space-md); justify-content: {{ block.settings.text_alignment | default: 'center' }}; flex-wrap: wrap;">
                {% if block.settings.button_1_label %}
                  <a href="{{ block.settings.button_1_link | default: '#' }}" 
                     class="btn-primary" 
                     style="padding: var(--space-lg) var(--space-2xl); font-size: var(--text-lg); font-weight: var(--font-bold); box-shadow: 0 4px 15px rgba(0,0,0,0.3);">
                    {{ block.settings.button_1_label }}
                  </a>
                {% endif %}
                
                {% if block.settings.button_2_label %}
                  <a href="{{ block.settings.button_2_link | default: '#' }}" 
                     class="btn-secondary" 
                     style="padding: var(--space-lg) var(--space-2xl); font-size: var(--text-lg); font-weight: var(--font-bold); background: rgba(255,255,255,0.15); border: 2px solid white; color: white; backdrop-filter: blur(10px);">
                    {{ block.settings.button_2_label }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Slideshow Navigation -->
  {% if section.blocks.size > 1 %}
    <!-- Previous/Next Arrows -->
    <button class="slide-arrow slide-prev" 
            style="position: absolute; left: var(--space-xl); top: 50%; transform: translateY(-50%); 
                   background: rgba(255,255,255,0.2); border: none; border-radius: 50%; 
                   width: 60px; height: 60px; cursor: pointer; z-index: 10; 
                   backdrop-filter: blur(10px); transition: all 0.3s ease;"
            onclick="changeSlide(-1)">
      <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
        <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
      </svg>
    </button>
    
    <button class="slide-arrow slide-next" 
            style="position: absolute; right: var(--space-xl); top: 50%; transform: translateY(-50%); 
                   background: rgba(255,255,255,0.2); border: none; border-radius: 50%; 
                   width: 60px; height: 60px; cursor: pointer; z-index: 10; 
                   backdrop-filter: blur(10px); transition: all 0.3s ease;"
            onclick="changeSlide(1)">
      <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
        <path d="M8.59 16.59L10 18l6-6-6-6-1.41 1.41L13.17 12z"/>
      </svg>
    </button>

    <!-- Slide Indicators -->
    <div class="slide-indicators" 
         style="position: absolute; bottom: var(--space-xl); left: 50%; transform: translateX(-50%); 
                display: flex; gap: var(--space-sm); z-index: 10;">
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          <button class="slide-indicator" 
                  style="width: 12px; height: 12px; border-radius: 50%; border: 2px solid white; 
                         background: {{ forloop.first | ternary: 'white', 'transparent' }}; 
                         cursor: pointer; transition: all 0.3s ease;"
                  onclick="goToSlide({{ forloop.index }})"
                  data-slide="{{ forloop.index }}">
          </button>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</section>

<!-- Slideshow JavaScript -->
<script>
let currentSlide = 1;
const totalSlides = {{ section.blocks.size }};

function showSlide(n) {
  const slides = document.querySelectorAll('.slide');
  const indicators = document.querySelectorAll('.slide-indicator');
  
  if (n > totalSlides) currentSlide = 1;
  if (n < 1) currentSlide = totalSlides;
  
  slides.forEach((slide, index) => {
    slide.style.display = (index + 1 === currentSlide) ? 'flex' : 'none';
  });
  
  indicators.forEach((indicator, index) => {
    indicator.style.background = (index + 1 === currentSlide) ? 'white' : 'transparent';
  });
}

function changeSlide(n) {
  currentSlide += n;
  showSlide(currentSlide);
}

function goToSlide(n) {
  currentSlide = n;
  showSlide(currentSlide);
}

// Auto-play (optional)
{% if section.settings.autoplay %}
setInterval(() => {
  currentSlide++;
  showSlide(currentSlide);
}, {{ section.settings.autoplay_speed | default: 5000 }});
{% endif %}
</script>

<!-- Enhanced Styles -->
<style>
.hero-slideshow h1 {
  font-size: 56px;
}

.slide-arrow:hover {
  background: rgba(255,255,255,0.3) !important;
  transform: translateY(-50%) scale(1.1);
}

/* Buchspezifische Animationen */
@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  25% { transform: translateY(-10px) rotate(2deg); }
  50% { transform: translateY(-5px) rotate(-1deg); }
  75% { transform: translateY(-8px) rotate(1deg); }
}

@keyframes sparkle {
  0%, 100% { opacity: 0.2; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.2); }
}

@keyframes glow {
  0%, 100% { opacity: 0.15; filter: drop-shadow(0 0 5px rgba(255,255,255,0.3)); }
  50% { opacity: 0.4; filter: drop-shadow(0 0 15px rgba(255,255,255,0.6)); }
}

/* Slide-spezifische Hintergr√ºnde */
.slide:nth-child(1) {
  background-image: 
    linear-gradient(135deg, rgba(45, 90, 39, 0.8) 0%, rgba(74, 124, 89, 0.6) 100%),
    radial-gradient(circle at 20% 80%, rgba(107, 155, 106, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(134, 239, 172, 0.2) 0%, transparent 50%);
}

.slide:nth-child(2) {
  background-image: 
    linear-gradient(135deg, rgba(30, 64, 175, 0.8) 0%, rgba(45, 90, 39, 0.6) 100%),
    radial-gradient(circle at 30% 70%, rgba(255, 215, 77, 0.2) 0%, transparent 50%),
    radial-gradient(circle at 70% 30%, rgba(147, 197, 253, 0.3) 0%, transparent 50%);
}

.slide:nth-child(3) {
  background-image: 
    linear-gradient(135deg, rgba(34, 197, 94, 0.8) 0%, rgba(45, 90, 39, 0.6) 100%),
    radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 75% 75%, rgba(167, 243, 208, 0.2) 0%, transparent 50%);
}

@media (max-width: 768px) {
  .hero-slideshow {
    height: 70vh !important;
    min-height: 500px !important;
  }
  
  .hero-slideshow h1 {
    font-size: 36px !important;
  }
  
  .slide-content {
    padding: 0 var(--space-md);
  }
  
  .slide-arrow {
    width: 50px !important;
    height: 50px !important;
  }
  
  .slide-arrow.slide-prev {
    left: var(--space-md) !important;
  }
  
  .slide-arrow.slide-next {
    right: var(--space-md) !important;
  }
  
  .slide-content > div:last-child {
    flex-direction: column;
    align-items: center;
  }
  
  .btn-primary,
  .btn-secondary {
    width: 100%;
    text-align: center;
    justify-content: center;
  }
  
  .floating-books .book-page,
  .floating-stars .star,
  .floating-shields .shield {
    display: none;
  }
}

@media (max-width: 480px) {
  .hero-slideshow {
    height: 60vh !important;
    min-height: 400px !important;
  }
  
  .hero-slideshow h1 {
    font-size: 28px !important;
  }
  
  .slide-content div[style*="font-size: var(--text-xl)"] {
    font-size: var(--text-base) !important;
  }
}

/* Slide Animations */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Focus States for Accessibility */
.slide-arrow:focus,
.slide-indicator:focus {
  outline: 3px solid #86EFAC;
  outline-offset: 2px;
}
</style>

