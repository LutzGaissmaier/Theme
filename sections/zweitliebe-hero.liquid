{% comment %} ZWEITLIEBE HERO SECTION {% endcomment %}

<style>
.zweitliebe-hero {
  background: linear-gradient(135deg, {{ section.settings.background_color | default: '#F9FAFB' }} 0%, #FFFFFF 100%);
  padding: 80px 0 120px;
  position: relative;
  overflow: hidden;
}

.zweitliebe-hero::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 50%;
  height: 100%;
  background: url("{{ 'zweitliebe_logo.png' | asset_url }}") no-repeat center;
  background-size: contain;
  opacity: 0.05;
  z-index: 1;
}

.zweitliebe-hero__container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--space-xl);
  position: relative;
  z-index: 2;
}

.zweitliebe-hero__content {
  max-width: 600px;
  margin: 0 auto;
  text-align: center;
}

.zweitliebe-hero__title {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: var(--font-bold);
  line-height: var(--leading-tight);
  color: {{ section.settings.text_color | default: '#111827' }};
  margin-bottom: var(--space-lg);
  letter-spacing: -0.02em;
}

.zweitliebe-hero__subtitle {
  font-size: var(--text-lg);
  font-weight: var(--font-normal);
  line-height: var(--leading-relaxed);
  color: var(--gray-600);
  margin-bottom: var(--space-2xl);
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
}

.zweitliebe-hero__button {
  display: inline-flex;
  align-items: center;
  gap: var(--space-sm);
  padding: var(--space-md) var(--space-2xl);
  background: linear-gradient(135deg, {{ section.settings.button_color | default: '#2D5A27' }} 0%, var(--primary-green-light) 100%);
  color: white;
  text-decoration: none;
  border-radius: var(--radius-lg);
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  box-shadow: var(--shadow-lg);
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
}

.zweitliebe-hero__button:hover {
  transform: translateY(-2px);
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  background: linear-gradient(135deg, var(--primary-green-light) 0%, {{ section.settings.button_color | default: '#2D5A27' }} 100%);
  color: white;
}

.zweitliebe-hero__button svg {
  width: 18px;
  height: 18px;
  transition: transform 0.3s ease;
}

.zweitliebe-hero__button:hover svg {
  transform: translateX(4px);
}

.zweitliebe-hero__stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--space-xl);
  margin-top: var(--space-3xl);
  padding-top: var(--space-2xl);
  border-top: 1px solid var(--gray-200);
}

.zweitliebe-hero__stat {
  text-align: center;
}

.zweitliebe-hero__stat-number {
  display: block;
  font-size: var(--text-3xl);
  font-weight: var(--font-bold);
  color: var(--primary-green);
  margin-bottom: var(--space-xs);
}

.zweitliebe-hero__stat-label {
  font-size: var(--text-sm);
  color: var(--gray-600);
  font-weight: var(--font-medium);
}

@media (max-width: 768px) {
  .zweitliebe-hero {
    padding: 60px 0 80px;
  }
  
  .zweitliebe-hero__container {
    padding: 0 var(--space-lg);
  }
  
  .zweitliebe-hero__title {
    font-size: 2.5rem;
    margin-bottom: var(--space-md);
  }
  
  .zweitliebe-hero__subtitle {
    font-size: var(--text-base);
    margin-bottom: var(--space-xl);
  }
  
  .zweitliebe-hero__button {
    padding: var(--space-sm) var(--space-xl);
    font-size: var(--text-base);
  }
  
  .zweitliebe-hero__stats {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
    margin-top: var(--space-2xl);
  }
}
</style>

<section class="zweitliebe-hero">
  <div class="zweitliebe-hero__container">
    <div class="zweitliebe-hero__content">
      <h1 class="zweitliebe-hero__title">
        {{ section.settings.title | default: 'Entdecke deine nächste große Lektüre' }}
      </h1>
      
      {% if section.settings.subtitle != blank %}
        <p class="zweitliebe-hero__subtitle">
          {{ section.settings.subtitle }}
        </p>
      {% endif %}
      
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="zweitliebe-hero__button">
          {{ section.settings.button_text }}
          <svg viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      {% endif %}
      
      <div class="zweitliebe-hero__stats">
        <div class="zweitliebe-hero__stat">
          <span class="zweitliebe-hero__stat-number">50.000+</span>
          <span class="zweitliebe-hero__stat-label">Bücher im Sortiment</span>
        </div>
        <div class="zweitliebe-hero__stat">
          <span class="zweitliebe-hero__stat-number">36</span>
          <span class="zweitliebe-hero__stat-label">Monate Garantie</span>
        </div>
        <div class="zweitliebe-hero__stat">
          <span class="zweitliebe-hero__stat-number">85%</span>
          <span class="zweitliebe-hero__stat-label">Umweltfreundlicher</span>
        </div>
      </div>
    </div>
  </div>
</section>

