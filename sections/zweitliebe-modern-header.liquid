        <h2 class="zweitliebe-logo-text">{{ shop.name | default: 'Zweitliebe' }}</h2>
      </a>
      
      <!-- Navigation -->
      <nav class="zweitliebe-nav" role="navigation">
        <a href="{{ routes.root_url }}" class="zweitliebe-nav-link">Home</a>
        <a href="{{ routes.collections_url }}" class="zweitliebe-nav-link">Browse</a>
        <a href="/pages/sell" class="zweitliebe-nav-link">Sell</a>
      </nav>
    </div>

    <!-- Search and Actions Section -->
    <div class="zweitliebe-search-section">
      <!-- Search Bar -->
      <div class="zweitliebe-search-container">
        <form action="{{ routes.search_url }}" method="get" role="search" class="zweitliebe-search-form">
          <div class="zweitliebe-search-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 256 256">
