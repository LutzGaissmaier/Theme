{% comment %}
  ZWEITLIEBE FEATURED COLLECTION - REBUY.DE STYLE
  Optimiert f√ºr Conversions und Trust-Building
{% endcomment %}

{% assign collection = collections[section.settings.collection] %}

<section style="{% if section.settings.spacing_above %}padding-top: var(--space-3xl);{% endif %} {% if section.settings.spacing_below %}padding-bottom: var(--space-3xl);{% endif %} {% if section.settings.bg_color %}background-color: {{ section.settings.bg_color }};{% endif %}">
  
  {% render 'zweitliebe-product-grid', 
    collection: collection,
    section: section %}

</section>

{% schema %}
{
  "name": "Zweitliebe Featured Collection",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collection"
    },
    {
      "type": "text", 
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center", 
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Products to Show",
      "min": 2,
      "max": 24,
      "step": 2,
      "default": 8
    },
    {
      "type": "range",
      "id": "products_per_row",
      "label": "Products per Row (Desktop)",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "mobile_products_per_row",
      "label": "Products per Row (Mobile)",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "2"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' Button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All Button Text",
      "default": "Alle Produkte anzeigen"
    },
    {
      "type": "checkbox",
      "id": "spacing_above",
      "label": "Spacing Above",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "spacing_below", 
      "label": "Spacing Below",
      "default": true
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    }
  ],
  "presets": [
    {
      "name": "Zweitliebe Featured Collection"
    }
  ]
}
{% endschema %} 