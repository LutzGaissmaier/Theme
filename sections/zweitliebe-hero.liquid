    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Jetzt stöbern"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Design"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Hintergrundfarbe",
      "default": "#F9FAFB"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Textfarbe",
      "default": "#111827"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Farbe",
      "default": "#2D5A27"
    }
  ],
  "presets": [
    {
      "name": "Zweitliebe Hero"
    }
  ]
}
{% endschema %} 