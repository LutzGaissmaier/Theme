{% comment %} ZWEITLIEBE MODERN HERO - Based on HTML Design 1 {% endcomment %}

<style>
/* === ZWEITLIEBE MODERN HERO === */
.zweitliebe-hero {
  font-family: var(--zweitliebe-font-family);
  min-height: 480px;
  display: flex;
  flex-direction: column;
  gap: var(--zweitliebe-space-6);
  background: linear-gradient(rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.4) 100%), 
              linear-gradient(135deg, #c5dac2 0%, #a8c9a3 50%, #8bb892 100%);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  align-items: flex-start;
  justify-content: flex-end;
  padding: var(--zweitliebe-space-4) var(--zweitliebe-space-10);
  border-radius: 0;
  position: relative;
}

.zweitliebe-hero-container {
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
}

.zweitliebe-hero-content {
  display: flex;
  flex-direction: column;
  gap: var(--zweitliebe-space-2);
  text-align: left;
  max-width: 600px;
}

.zweitliebe-hero-title {
  color: var(--zweitliebe-white);
  font-size: var(--zweitliebe-text-4xl);
  font-weight: 900;
  line-height: 1.2;
  letter-spacing: -0.033em;
  margin: 0;
}

.zweitliebe-hero-subtitle {
  color: var(--zweitliebe-white);
  font-size: var(--zweitliebe-text-sm);
  font-weight: 400;
  line-height: 1.4;
  margin: 0;
}

.zweitliebe-hero-button {
  display: flex;
  min-width: 84px;
  max-width: 480px;
  cursor: pointer;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: var(--zweitliebe-radius-full);
  height: 40px;
  padding: 0 var(--zweitliebe-space-4);
  background: var(--zweitliebe-accent);
  color: var(--zweitliebe-dark);
  text-decoration: none;
  font-size: var(--zweitliebe-text-sm);
  font-weight: 700;
  line-height: 1.4;
  letter-spacing: 0.015em;
  border: none;
  transition: all 0.2s ease;
  margin-top: var(--zweitliebe-space-4);
  width: fit-content;
}

.zweitliebe-hero-button:hover {
  background: #2dd408;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(56, 236, 28, 0.3);
}

/* Container adjustments for larger screens */
@media (min-width: 480px) {
  .zweitliebe-hero {
    gap: var(--zweitliebe-space-8);
    padding: var(--zweitliebe-space-4) var(--zweitliebe-space-10);
  }
  
  .zweitliebe-hero-title {
    font-size: 48px;
    font-weight: 900;
    line-height: 1.2;
    letter-spacing: -0.033em;
  }
  
  .zweitliebe-hero-subtitle {
    font-size: var(--zweitliebe-text-base);
    font-weight: 400;
    line-height: 1.4;
  }
  
  .zweitliebe-hero-button {
    height: 48px;
    padding: 0 var(--zweitliebe-space-5);
    font-size: var(--zweitliebe-text-base);
    font-weight: 700;
    line-height: 1.4;
    letter-spacing: 0.015em;
  }
}

/* Mobile responsive */
@media (max-width: 768px) {
  .zweitliebe-hero {
    min-height: 400px;
    padding: var(--zweitliebe-space-4);
  }
  
  .zweitliebe-hero-title {
    font-size: var(--zweitliebe-text-3xl);
  }
  
  .zweitliebe-hero-subtitle {
    font-size: var(--zweitliebe-text-sm);
  }
  
  .zweitliebe-hero-button {
    width: 100%;
    justify-content: center;
  }
}
</style>

<section class="zweitliebe-hero">
  <div class="zweitliebe-hero-container">
    <div class="zweitliebe-hero-content">
      <h1 class="zweitliebe-hero-title">
        {{ section.settings.title | default: "Discover Your Next Great Read" }}
      </h1>
      <h2 class="zweitliebe-hero-subtitle">
        {{ section.settings.subtitle | default: "Explore our curated collection of used books, from timeless classics to contemporary bestsellers. Find your next literary adventure at Zweitliebe." }}
      </h2>
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="zweitliebe-hero-button">
          <span>{{ section.settings.button_text | default: "Shop Now" }}</span>
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Zweitliebe Hero",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Discover Your Next Great Read"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Explore our curated collection of used books, from timeless classics to contemporary bestsellers. Find your next literary adventure at Zweitliebe."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Zweitliebe Hero"
    }
  ]
}
{% endschema %} 